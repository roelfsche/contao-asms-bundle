              "postalCode" : "<?php echo $this->arrJob['zipCode'] ?>",
              "streetAddress" : "<?php echo $this->arrJob['street'] ?> <?php echo $this->arrJob['houseNumber'] ?>",
              "addressCountry" : "DE"
    
          }
