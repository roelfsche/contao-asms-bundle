        <?php endif ?>
        <?php if (isset($this->arrJob['clinicLogo'])) : ?>
        "logo" : "<?php echo $this->arrJob['clinicLogo'] ?>"
        <?php endif ?>
      },
      "jobLocation" : {
          "@type" : "Place",
          "address" : {
              "@type" : "PostalAddress",
              "addressLocality" : "<?php echo $this->arrJob['city'] ?>",
